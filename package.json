    "dependencies": {
        "@babel/runtime": "7.11.2",
        "core-js": "3.6.5",
        "create-hash": "1.2.0",
        "create-hmac": "1.1.7",
        "crypto-js": "4.0.0",
        "hdkey": "1.1.2",
        "lemo-tx": "^1.1.14",
        "lemo-utils": "^1.1.10",
        "pbkdf2": "3.1.1",
        "safe-buffer": "5.2.1"
