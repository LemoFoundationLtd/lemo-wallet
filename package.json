        "rollup-plugin-uglify": "6.0.4",
        "rollup-plugin-visualizer": "^4.1.0"
    },
    "scripts": {
        "build": "rollup -c && rollup -c rollup-umd.config.js",
        "dev": "rollup -c -w",
